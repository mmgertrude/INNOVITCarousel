
@model IEnumerable<INNOVITCarousel.Models.Picture>
@{
    ViewData["Title"] = "Home Page";
}


<head>

    <style>
        .carousel {
            background: #2f4357;
            margin-top: 20px;
        }

        .carousel-item {
            text-align: center;
            min-height: 280px; /* Prevent carousel from being distorted if for some reason image doesn't load */
        }

        .bs-example {
            margin: 20px;
        }
    </style>
</head>


<div class="container">
    <div class="bs-example">
        <!--id demo will be targeted by the carousel indicators in the ol and the carousel controls -->
        <div id="demo" class="carousel slide" data-interval="3000" data-ride="carousel">

            <!-- Indicators -->
            <ol class="carousel-indicators">
                @{
                    for (int i = 0; i < 5; i++)
                    {
                        <li data-target="#demo" data-slide-to="@(i.ToString())" @(i == 1 ? "class='active'" : "")></li>
                    }

                }

            </ol>

            <!-- The slideshow -->
